<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:pa="http://xmlns.jcp.org/jsf/passthrough">
<h:head>
	<title>Registro</title>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href="vendor/bootstrap/css/bootstrap.min.css" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href="fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href="vendor/animate/animate.css" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href="vendor/css-hamburgers/hamburgers.min.css" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href="vendor/select2/select2.min.css" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="css/util.css" />
	<link rel="stylesheet" type="text/css" href="css/main.css" />
	<!--===============================================================================================-->
</h:head>
<h:body>

	<div class="limiter"
		style="background-repeat: no-repeat; background-size: cover; background-image: url(assets/imgs/football-2415894.jpg);">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt">
					<img
						src="https://image.freepik.com/vector-gratis/pelota-de-futbol-dibujado-a-mano_1034-741.jpg"
						alt="Pelota" />
				</div>

				<h:form class="login100-form validate-form">
					<span class="login100-form-title">Registro</span>

					<div class="wrap-input100 validate-input" data-validate="El nombre es un campo requerido">
						<h:inputText class="input100" value="#{registroBean.usuarioNuevo.nombre}" pa:placeholder="nombre"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-id-card-o" aria-hidden="true"></i>
						</span>
					</div>


					<div class="wrap-input100 validate-input" data-validate="El apellido es un campo requerido">
						<h:inputText class="input100" value="#{registroBean.usuarioNuevo.apellido}" pa:placeholder="apellido"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-id-card" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="El email es requerido: ex@abc.xyz">
						<h:inputText class="input100" value="#{registroBean.usuarioNuevo.email}" pa:placeholder="email"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-envelope-o" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<h:inputText class="input100" value="#{registroBean.usuarioNuevo.celular}" pa:placeholder="celular"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-mobile" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input"
						data-validate="El usuario es requerido">
						<h:inputText class="input100" value="#{registroBean.usuarioNuevo.usuario}" pa:placeholder="usuario"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input"
						data-validate="Password is required">
						<h:inputSecret class="input100"
							value="#{registroBean.usuarioNuevo.password}" pa:placeholder="contrase침a"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>


					<div class="wrap-input100 validate-input"
						data-validate="Password is required">
						<!-- 						<input class="input100" type="password" name="pass" -->
						<!-- 							placeholder="Contrase침a" /> -->
						<h:inputSecret class="input100"
							value="#{registroBean.repetirPassword}" pa:placeholder="repertir contrase침a"/>
						<span class="focus-input100"></span> <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<!-- 						<button class="login100-form-btn">Iniciar sesi칩n</button> -->
						<h:commandButton styleClass="login100-form-btn"
							action="#{registroBean.registrar()}" value="Registrarme" />
					</div>
					
					<div class="text-center p-t-136">
						<h:commandLink styleClass="txt2" action="#{registroBean.volver()}"
							value="volver">
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</h:commandLink>
					</div>

				</h:form>
			</div>
		</div>
	</div>




	<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<!--===============================================================================================-->
	<script src="js/main.js"></script>

</h:body>
</html>