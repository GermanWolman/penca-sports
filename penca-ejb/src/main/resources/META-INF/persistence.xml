<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="primary1">
		<jta-data-source>java:jboss/datasources/pencaDS</jta-data-source>
		<class>com.pronostico.penca.model.Partido</class>
		<class>com.pronostico.penca.model.Usuario</class>
		<class>com.pronostico.penca.model.Equipo</class>
		<class>com.pronostico.penca.model.Torneo</class>
		<class>com.pronostico.penca.model.Grupo</class>
		<class>com.pronostico.penca.model.Eliminatoria</class>
		<class>com.pronostico.penca.model.GrupoPenca</class>
		<class>com.pronostico.penca.model.Pronostico</class>
		<class>com.pronostico.penca.model.Fecha</class>
		<class>com.pronostico.penca.model.SolicitudPenca</class>
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
		</properties>
	</persistence-unit>
</persistence>
